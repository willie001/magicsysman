<form class="form-horizontal">
	<div class="col-xs-6">
		<div class="panel panel-default">
			<div class="panel-body">
			   	<div class="form-group">
			      	<label class="col-xs-2 control-label">Job Type:</label>
			      	<div class="col-xs-10">
			         	<select name="jobtype" class="form-control">
			            	<option value="">Select Job Type</option>	
							<option value="NM">Once-Off</option>
							<option value="SW">Fortnightly (Blue)</option>
							<option value="SW">Fortnightly (Yellow)</option>
							<option value="TA">Weekly</option>
			      		</select>
			      	</div>
			  	</div>
			  	<div class="form-group">
			      	<label class="col-xs-2 control-label">Preferred Day:</label>
			      	<div class="col-xs-10">
						<select name="jobtype" class="form-control">
			            	<option value="">Select Week Day</option>	
							<option value="NM">Monday</option>
							<option value="SW">...</option>
							<option value="TA">Saturday</option>
			      		</select>
			      	</div>
			  	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label">Once-Off Date:</label>
			      	<div class="col-xs-6">
						<p class="input-group">
							 	<input class="form-control" type="text" uib-datepicker-popup="{{dp.format}}" ng-model="dp.dt" is-open="dp.opened" min-date="dp.minDate" max-date="'2015-06-22'" datepicker-options="dp.dateOptions" date-disabled="dp.disabled(date, mode)"
			                	ng-required="true" close-text="Close" />
			                	<span class="input-group-btn">
			                   		<button class="btn btn-default" type="button" ng-click="dp.open($event)">
			                      		<em class="fa fa-calendar"></em>
			                   		</button>
			                	</span>
			             	</p>
			      	</div>
			  	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label">Ironing:</label>
			      	<div class="col-xs-10">
						<div class="radio c-radio c-radio-nofont">
			         			<label>
			            			<input type="radio" name="CT" value="R" checked="" />
			           				<span></span>Yes
								</label>
			      			</div>
			      			<div class="radio c-radio c-radio-nofont">
			         			<label>
			            			<input type="radio" name="CT" value="C" checked="" />
			            			<span></span>No
								</label>
			      			</div>
			      	</div>
			  	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label">Start Time:</label>
			      	<div class="col-xs-10">
<!--						uib-timepicker-->
			      	</div>
			  	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label">End Time:</label>
			      	<div class="col-xs-10">
<!--						uib-timepicker-->
			      	</div>
			  	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label"></label>
			      	<div class="col-xs-10">
						<div class="checkbox c-checkbox">
			          		<label>
			             		<input type="checkbox" checked="false" />
			             		<span class="fa fa-check"></span>Use setting as default for customer
							</label>
			       		</div>
			      	</div>
			  	</div>
				<div class="form-group">
			      	<div class="col-xs-12 text-center">
						<button type="button" class="btn btn-primary">Find Matching Cleaner</button>
						<button type="button" class="btn btn-primary">Add Notes</button>
			      	</div>
			  	</div>
			</div>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="form-group">
			      	<label class="col-xs-2 control-label">Selected Cleaner:</label>
			      	<div class="col-xs-10">
			         	<input type="text" class="form-control" ng-Readonly="true" value="Joe Cleaner"/>
			      	</div>
			   	</div>
				<div class="form-group">
			      	<label class="col-xs-2 control-label">Calculated Fee:</label>
			      	<div class="col-xs-10">
			         	<input type="text" class="form-control" ng-Readonly="true" value="$120.00"/>
			      	</div>
			   	</div>
			</div>
			<div class="form-group">
		      	<div class="col-xs-12 text-center">
					<button type="button" class="btn btn-info">Process Payment</button>
					<button type="button" class="btn btn-info">Confirm Booking</button>
		      	</div>
		  	</div>
		</div>
	</div>
	
	
	<div class="form-group">
	    <div class="col-xs-offset-2 col-xs-6">
	    </div>
	    <div class="text-right col-xs-4">
		</div>
	</div>
</form>

