<form class="form-horizontal">
   	<div class="form-group">
		<label class="col-md-2 control-label">Leave Dates:</label>
		<div class="col-md-10" ng-controller="DatepickerDemoCtrl as dp">
			<div class="col-md-1">From: </div>
			<div class="col-md-3">
				<p class="input-group">
				 	<input class="form-control" type="text" uib-datepicker-popup="{{dp.format}}" ng-model="dp.dt" is-open="dp.opened" min-date="dp.minDate" max-date="'2015-06-22'" datepicker-options="dp.dateOptions" date-disabled="dp.disabled(date, mode)"
                	ng-required="true" close-text="Close" />
                	<span class="input-group-btn">
                   		<button class="btn btn-default" type="button" ng-click="dp.open($event)">
                      		<em class="fa fa-calendar"></em>
                   		</button>
                	</span>
             	</p>
			</div>
			<div class="col-md-1"> to </div>
			<div class="col-md-3">
				<p class="input-group">
				 	<input class="form-control" type="text" uib-datepicker-popup="{{dp.format}}" ng-model="dp.dt" is-open="dp.opened" min-date="dp.minDate" max-date="'2015-06-22'" datepicker-options="dp.dateOptions" date-disabled="dp.disabled(date, mode)"
                	ng-required="true" close-text="Close" />
                	<span class="input-group-btn">
                   		<button class="btn btn-default" type="button" ng-click="dp.open($event)">
                      		<em class="fa fa-calendar"></em>
                   		</button>
                	</span>
             	</p>	
			</div>
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">Date Advised:</label>
		<div class="col-md-10" ng-controller="DatepickerDemoCtrl as dp">
			<div class="col-md-3">
				<p class="input-group">
				 	<input class="form-control" type="text" uib-datepicker-popup="{{dp.format}}" ng-model="dp.dt" is-open="dp.opened" min-date="dp.minDate" max-date="'2015-06-22'" datepicker-options="dp.dateOptions" date-disabled="dp.disabled(date, mode)"
                	ng-required="true" close-text="Close" />
                	<span class="input-group-btn">
                   		<button class="btn btn-default" type="button" ng-click="dp.open($event)">
                      		<em class="fa fa-calendar"></em>
                   		</button>
                	</span>
             	</p>
			</div>
			<div class="col-md-5"></div>
		</div>
	</div>

	<div class="form-group">
	    <div class="col-lg-offset-2 col-lg-6">
	    	
	    </div>
	    <div class="text-right col-lg-4">
			<button type="button" class="btn btn-default">Cancel</button>
			<button type="button" class="btn btn-success">Save</button>
		</div>
	</div>
</form>

