<form class="form-horizontal">
       
	  <div class="form-group">
	    <label class="col-md-2 control-label">Card Holder's Name:</label>
	    <div class="col-md-10">
	      <input type="text" class="input-block-level" pattern="\w+ \w+.*" title="Fill your first and last name" required>
	    </div>
	  </div>
       
      <div class="form-group">
        <label class="col-md-2 control-label">Card Number:</label>
        <div class="col-md-10">
          <div class="row-fluid">
            <div >
              <input type="text" class="col-md-1" autocomplete="off" maxlength="4" pattern="\d{4}" title="First four digits" required>
            </div>
            <div >
              <input type="text" class="col-md-1" autocomplete="off" maxlength="4" pattern="\d{4}" title="Second four digits" required>
            </div>
            <div >
              <input type="text" class="col-md-1" autocomplete="off" maxlength="4" pattern="\d{4}" title="Third four digits" required>
            </div>
            <div >
              <input type="text" class="col-md-1" autocomplete="off" maxlength="4" pattern="\d{4}" title="Fourth four digits" required>
            </div>
          </div>
        </div>
      </div>
	<div class="form-group">
        <label class="col-md-2 control-label">Expiry Date:</label>
        <div class="col-md-10">
			<div class="row-fluid">
            	<div >
	              	<select class="col-md-1">
	                	<option>January</option>
	                	<option>...</option>
	                	<option>December</option>
	              	</select>
            	</div>
            	<div >
	              	<select class="col-md-1">
	                	<option>2017</option>
	                	<option>...</option>
	                	<option>2019</option>
	              	</select>
            	</div>
          	</div>
		</div>
	</div>
	<div class="form-group">
        <label class="col-md-2 control-label">Card CVV:</label>
        <div class="col-md-10">
          <div class="row-fluid">
            <div >
              <input type="text" class="col-md-1" autocomplete="off" maxlength="4" pattern="\d{4}" title="CVV" required/>
            </div>
          </div>
        </div>
      </div>
       
      <div class="form-group">
    	<div class="col-lg-offset-2 col-lg-6">
    	
    	</div>
    	<div class="text-right col-lg-4">
			<button type="button" class="btn btn-default">Cancel</button>
			<button type="button" class="btn btn-success">Save</button>
		</div>
	</div>
</form>

